<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CreativeFileBrowser.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="620" d:DesignHeight="400"
        Width="620" Height="400"
        x:Class="CreativeFileBrowser.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="CreativeFileBrowser">

    <Grid Background="#070714" ColumnDefinitions="Auto, Auto, *">
        <!-- 1. Left Side Options -->
            <Grid Grid.Column="0" RowDefinitions="Auto, Auto, Auto, Auto, Auto, *, Auto" ColumnDefinitions="Auto">
                <!-- 1.a. Top Left — Spacer -->
                <Rectangle Fill="#070714" Grid.Row="0" Width="90" Height="40" ></Rectangle>
                <!-- 1.b. Next Left — Top Buttons -->
                <Rectangle Grid.Row="1" Height="40" ></Rectangle>
                <StackPanel Grid.Row="1" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
                    <Border Height="30" Background="#2E2E47" CornerRadius="6" Padding="5" Margin="2.5, 0, 2.5, 0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label Foreground="#F6F6F6">A</Label>
                    </Border>
                    <Border Height="30" Background="#2E2E47" CornerRadius="6" Padding="5" Margin="2.5, 0, 2.5, 0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label Foreground="#F6F6F6">B</Label>
                    </Border>
                    <Border Height="30" Background="#2E2E47" CornerRadius="6" Padding="5" Margin="2.5, 0, 2.5, 0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label Foreground="#F6F6F6">C</Label>
                    </Border>
                    <Border Height="30" Background="#2E2E47" CornerRadius="6" Padding="5" Margin="2.5, 0, 2.5, 0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label Foreground="#F6F6F6">D</Label>
                    </Border>
                </StackPanel>
                <!-- 1.c. Next Left — View Options -->
                <Rectangle Grid.Row="2" ></Rectangle>
                <Border Background="#7A7A94" Grid.Row="2" CornerRadius="6" Margin="5" Padding="9, 1.5" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Label Foreground="#070714">Choose View ^</Label>
                </Border>
                <!-- 1.d. Next Left — Feature Action Stuff -->
                <Rectangle Fill="#0A0A17" Grid.Row="3" ></Rectangle>
                <StackPanel Grid.Row="3" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Border Background="#1F1F37" CornerRadius="6" Padding="9, 1.5" Margin="0, 0, 0, 5" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label Foreground="#F6F6F6" FontSize="10">De/Select All</Label>
                    </Border>
                    <Border Background="#1F1F37" CornerRadius="6" Margin="0, 0, 0, 5" Padding="9, 1.5" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Label Foreground="#F6F6F6" FontSize="10">+ Monitor Folder</Label>
                    </Border>
                    <Border Background="#1F1F37" CornerRadius="6" Margin="0, 0, 0, 5" Padding="9, 1.5" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Label Foreground="#F6F6F6" FontSize="10">- Monitor Folder</Label>
                    </Border>
                </StackPanel>
                <!-- 1.e. Next Left — Workspace Options -->
                <Rectangle Grid.Row="4" ></Rectangle>
                <Border Background="#7A7A94" Grid.Row="4" CornerRadius="6" Margin="0, 0, 0, 5" Padding="9, 1.5" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Label Foreground="#070714">Workspaces ^</Label>
                </Border>
                <!-- 1.f. Next Left — Workspace List -->
                <Rectangle Grid.Row="5" ></Rectangle>
                <StackPanel Grid.Row="5" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Border Background="#1F1F37" CornerRadius="6" Margin="0, 0, 0, 5" Padding="9, 1.5" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Label Foreground="#F6F6F6" FontSize="10">+ Workspace</Label>
                    </Border>
                    <Border Background="#1F1F37" CornerRadius="6" Margin="0, 0, 0, 5" Padding="9, 1.5" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Label Foreground="#F6F6F6" FontSize="10">- Workspace</Label>
                    </Border>
                </StackPanel>
                <!-- 1.g. Bottom Left — User Options // Settings -->
                <Rectangle Grid.Row="7" ></Rectangle>
                <StackPanel Grid.Row="7" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <Border Background="#7A7A94" CornerRadius="25" Padding="9, 1.5" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Label Foreground="#F6F6F6">S</Label>
                    </Border>
                </StackPanel>

            </Grid>
        <!-- Left Column Divider -->
        <Rectangle Fill="#25253E" Grid.Column="1" Width="2"></Rectangle>

        <Grid Grid.Column="2" RowDefinitions="Auto, Auto, Auto, Auto, Auto, *, Auto">
            <!-- Title Bar -->
            <Grid Grid.Row="0" Height="40" ColumnDefinitions="Auto, *, Auto">
                <Rectangle Grid.Column="0" Width="5"></Rectangle>
                <!-- 0. Title -->
                <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label VerticalAlignment="Center" FontSize="18" FontWeight="Medium" Margin="5 0 0 0" Foreground="#F6F6F6">Creative File Browser</Label>
                </Grid>
                <Rectangle Grid.Column="2" Width="5"></Rectangle>
            </Grid>
            <Rectangle Fill="#25253E" Grid.Column="0" Grid.Row="1" Height="2"></Rectangle>
            <!-- Controls -->
            <Grid Grid.Row="2" ColumnDefinitions="Auto, Auto, *" RowDefinitions="Auto, *">
                <!-- 2. File Tree View and Search -->
                <Rectangle Fill="#1F1F37" Grid.Column="1" Grid.Row="0" Width="90"></Rectangle>
                <Label Grid.Column="1" Grid.Row="0" Foreground="#F6F6F6">File Path</Label>
                <Rectangle Fill="#17172B" Grid.Column="1" Grid.Row="1" ></Rectangle>
                <Label Grid.Column="1" Grid.Row="1" Foreground="#F6F6F6">Search/Tree</Label>
                <!-- 3. Main Gallery View based on selection -->
                <Rectangle Fill="#7A7A94" Grid.Column="2" Grid.Row="0"></Rectangle>
                <Label Grid.Column="2" Grid.Row="0" Foreground="#F6F6F6">File Title — Zoom — Buttons — Search</Label>
                <Rectangle Fill="#25253E" Grid.Column="2" Grid.Row="1"></Rectangle>
                <Label Grid.Column="2" Grid.Row="1" Foreground="#F6F6F6">Gallery — Main View</Label>
            </Grid>
            <!-- Main Area -->

            <!-- Footer — Stretcher -->
            <Rectangle Fill="#25253E" Grid.Column="0" Grid.Row="6" Height="2"></Rectangle>
        </Grid>
    </Grid>

</Window>
