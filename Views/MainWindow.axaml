<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CreativeFileBrowser.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="620" d:DesignHeight="400"
        Width="620" Height="400"
        x:Class="CreativeFileBrowser.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="CreativeFileBrowser">

    <!-- Grid Setup -->
    <Grid Background="#070714">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" /> <!-- Left Side Options -->
            <ColumnDefinition Width="Auto" />   <!-- Left Column Divider -->
            <ColumnDefinition Width="Auto" />   <!-- Center File TreeView -->
            <ColumnDefinition Width="Auto" />   <!-- Center Column Divider -->
            <ColumnDefinition Width="*" />   <!-- Main Content Area -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />  <!-- Title Bar -->
            <RowDefinition Height="Auto" />     <!-- Top Divider -->
            <RowDefinition Height="*" />     <!-- Main Area -->
        </Grid.RowDefinitions>

    <!-- Grid Content - Top Down -->
    <!-- Title Bar -->
    <TextBlock Grid.Row="0" Grid.ColumnSpan="5"
           HorizontalAlignment="Left" VerticalAlignment="Center"
           FontSize="12" Foreground="#FFFFFF" Margin="10,0,10,0"
           Padding="5"> logo +
        Creative File Browser
    </TextBlock>
    <!-- Top Divider -->
    <Rectangle Grid.Row="1" Grid.ColumnSpan="5"
               Fill="#1A1A2E" Height="2"/>
               
    <!-- Main Area -->
    <!-- Left Options Area -->
    <Grid Grid.Column="0" Grid.Row="2" RowDefinitions="Auto, Auto, Auto, Auto, Auto, *, Auto">
        <!-- Left Top Buttons -->
        <StackPanel Grid.Row="0" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Border Height="30" Background="#2E2E47" CornerRadius="6" Padding="5" Margin="5, 2.5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label FontSize="12" Foreground="#F6F6F6">A</Label>
            </Border>
            <TextBlock FontSize="10" Foreground="Gray" HorizontalAlignment="Center">System Files</TextBlock>
            
            <Border Height="30" Background="#2E2E47" CornerRadius="6" Padding="5"  Margin="5, 2.5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label FontSize="12" Foreground="#F6F6F6">B</Label>
            </Border>
            <TextBlock FontSize="10" Foreground="Gray" HorizontalAlignment="Center">Monitored Files</TextBlock>
            
            <Border Height="30" Background="#2E2E47" CornerRadius="6" Padding="5"  Margin="5, 2.5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label FontSize="12" Foreground="#F6F6F6">C</Label>
            </Border>
            <TextBlock FontSize="10" Foreground="Gray" HorizontalAlignment="Center">Workspaces</TextBlock>

            <Border Height="30" Background="#2E2E47" CornerRadius="6" Padding="5"  Margin="5, 2.5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label FontSize="12" Foreground="#F6F6F6">D</Label>
            </Border>
            <TextBlock FontSize="10" Foreground="Gray" HorizontalAlignment="Center">Smart Folders</TextBlock>

            <Border Height="30" Background="#2E2E47" CornerRadius="6" Padding="5" Margin="5, 2.5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label FontSize="12" Foreground="#F6F6F6">E</Label>
            </Border>
            <TextBlock FontSize="10" Foreground="Gray" HorizontalAlignment="Center">Project Notes</TextBlock>

            <Border Height="30" Background="#2E2E47" CornerRadius="6" Padding="5"  Margin="5, 2.5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label FontSize="12" Foreground="#F6F6F6">F</Label>
            </Border>
            <TextBlock FontSize="10" Foreground="Gray" HorizontalAlignment="Center">Inspiration</TextBlock>

        </StackPanel>

        <StackPanel Grid.Row="7" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5">
            <Border Height="30" Background="#2E2E47" CornerRadius="50" Padding="5"  Margin="5, 2.5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label FontSize="12" Foreground="#F6F6F6">H</Label>
            </Border>
            <TextBlock FontSize="10" Foreground="Gray">Settings</TextBlock>
        </StackPanel>
    </Grid>
    
    <!-- Left Column Divider -->
    <Rectangle Fill="#25253E" Grid.Column="1" Grid.Row="2" Width="2"></Rectangle>
    
    <!-- Center - File Treeview options -->
    <Grid Grid.Column="3" Grid.Row="2" RowDefinitions="Auto, Auto, Auto, Auto, *" >
        <TextBlock Grid.Row="0" Foreground="White" Padding="5">File Path</TextBlock>
        <!-- Divider -->
        <Rectangle Grid.Row="1" Fill="#1A1A2E" Height="2"/>
        <TextBlock Grid.Row="2" Foreground="White" Padding="5">File Search</TextBlock>
        <!-- Divider -->
        <Rectangle Grid.Row="3" Fill="#1A1A2E" Height="2"/>
        <TextBlock Grid.Row="4" Foreground="White" Padding="5">File Treeview</TextBlock>
    </Grid>
    <!-- Center Column Divider -->
    <Rectangle Fill="#25253E" Grid.Column="4" Grid.Row="2" Width="2"></Rectangle>
    
    <!-- Right Main View â€” The Magic Gallery -->


    <!-- End of Grid -->
    </Grid>

</Window>

