<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CreativeFileBrowser.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="620" d:DesignHeight="400"
        Width="620" Height="400"
        x:Class="CreativeFileBrowser.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="CreativeFileBrowser">

    <!-- Grid Setup -->
    <Grid Background="#101022">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" /> <!-- Left Side Options -->
            <ColumnDefinition Width="Auto" />   <!-- Left Column Divider -->
            <ColumnDefinition Width="Auto" />   <!-- Center File TreeView -->
            <ColumnDefinition Width="Auto" />   <!-- Center Column Divider -->
            <ColumnDefinition Width="*" />   <!-- Main Content Area -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />  <!-- Title Bar -->
            <RowDefinition Height="Auto" />     <!-- Top Divider -->
            <RowDefinition Height="*" />     <!-- Main Area -->
        </Grid.RowDefinitions>

    <!-- Grid Content - Top Down -->
    <!-- Title Bar -->
    <Rectangle Grid.ColumnSpan="5" Grid.Row="0" Fill="#131718"></Rectangle>
    <TextBlock Grid.Row="0" Grid.ColumnSpan="5"
           HorizontalAlignment="Left" VerticalAlignment="Center"
           FontSize="12" Foreground="#FFFFFF" Margin="10,0,10,0"
           Padding="5"> logo +
        Creative File Browser
    </TextBlock>
    <!-- Top Divider -->
    <Rectangle Grid.Row="1" Grid.ColumnSpan="5"
               Fill="#292D2E" Height="2"/>
               
    <!-- Main Area -->
    <!-- Left Options Area -->
    <Grid Grid.Column="0" Grid.Row="2" RowDefinitions="Auto, *, Auto">
        <Rectangle Fill="#131718" Grid.RowSpan="3"></Rectangle>
        <!-- Left Top Buttons -->
        <StackPanel Grid.Row="0" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Border Height="30" Background="#ADADAD" CornerRadius="6" Padding="5" Margin="5, 2.5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label FontSize="10" Foreground="#131718">A</Label>
            </Border>
            <TextBlock FontSize="8" Foreground="Gray" HorizontalAlignment="Center">System Files</TextBlock>
            
            <Border Height="30" Background="#ADADAD" CornerRadius="6" Padding="5"  Margin="5, 2.5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label FontSize="10" Foreground="#131718">B</Label>
            </Border>
            <TextBlock FontSize="8" Foreground="Gray" HorizontalAlignment="Center">Monitored</TextBlock>
            
            <Border Height="30" Background="#ADADAD" CornerRadius="6" Padding="5"  Margin="5, 2.5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label FontSize="10" Foreground="#131718">C</Label>
            </Border>
            <TextBlock FontSize="8" Foreground="Gray" HorizontalAlignment="Center">Workspaces</TextBlock>

            <Border Height="30" Background="#ADADAD" CornerRadius="6" Padding="5"  Margin="5, 2.5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label FontSize="10" Foreground="#131718">D</Label>
            </Border>
            <TextBlock FontSize="8" Foreground="Gray" HorizontalAlignment="Center">Smart Folders</TextBlock>

            <Border Height="30" Background="#ADADAD" CornerRadius="6" Padding="5" Margin="5, 2.5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label FontSize="10" Foreground="#131718">E</Label>
            </Border>
            <TextBlock FontSize="8" Foreground="Gray" HorizontalAlignment="Center">Notes</TextBlock>

            <Border Height="30" Background="#ADADAD" CornerRadius="6" Padding="5"  Margin="5, 2.5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label FontSize="10" Foreground="#131718">F</Label>
            </Border>
            <TextBlock FontSize="8" Foreground="Gray" HorizontalAlignment="Center">Inpso</TextBlock>

        </StackPanel>

        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5">
            <Border Height="30" Background="#ADADAD" CornerRadius="50" Padding="5"  Margin="5, 2.5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label FontSize="10" Foreground="#131718">H</Label>
            </Border>
            <TextBlock FontSize="8" Foreground="Gray">Settings</TextBlock>
        </StackPanel>
    </Grid>
    <!-- Left Column Divider -->
    <Rectangle Fill="#292D2E" Grid.Column="1" Grid.Row="2" Width="2"></Rectangle>
    
    <!-- Center - File Treeview options -->
    <Grid Grid.Column="2" Grid.Row="2" RowDefinitions="Auto, Auto, Auto, Auto, *" >
        <Rectangle Fill="#171819" Grid.RowSpan="5"></Rectangle>

        <TextBlock Grid.Row="0" FontSize="8" Foreground="White" Padding="5" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center">File/path/super/long/you/know/where_this_is.right.here</TextBlock>
        <!-- Divider -->
        <Rectangle Grid.Row="1" Fill="#292D2E" Height="2"/>

        <TextBox Grid.Row="2" FontSize="10" Background="DarkGray" Padding="5" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center" Width="215" CornerRadius="6">
            File Search
        </TextBox>

        <!-- Divider -->
        <Rectangle Grid.Row="3" Fill="#292D2E" Height="2"/>

        <!-- Example file treeview placeholder -->
        <StackPanel Grid.Row="4">
            <TextBlock FontSize="10" Foreground="White" Padding="5, 5, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">File Treeview  v</TextBlock>
            <TextBlock FontSize="10" Foreground="White" Padding="5, 0, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">___ File Treeview</TextBlock>
            <TextBlock FontSize="10" Foreground="White" Padding="5, 0, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">___ File Treeview</TextBlock>
            <TextBlock FontSize="10" Foreground="White" Padding="5, 0, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">___ ___ File Treeview</TextBlock>
            <TextBlock FontSize="10" Foreground="White" Padding="5, 0, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">___ ___ File Treeview</TextBlock>

            <TextBlock FontSize="10" Foreground="White" Padding="5, 5, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">File Treeview  v</TextBlock>
            <TextBlock FontSize="10" Foreground="White" Padding="5, 0, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">___ File Treeview</TextBlock>
            <TextBlock FontSize="10" Foreground="White" Padding="5, 0, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">___ File Treeview</TextBlock>
            <TextBlock FontSize="10" Foreground="White" Padding="5, 0, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">___ ___ File Treeview</TextBlock>
            <TextBlock FontSize="10" Foreground="White" Padding="5, 0, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">___ ___ File Treeview</TextBlock>
        </StackPanel>
        <!-- Divider
        <Rectangle Grid.Row="5" Fill="#292D2E" Height="2"/>
        -->
    </Grid>
    <!-- Center Column Divider -->
    <Rectangle Fill="#292D2E" Grid.Column="3" Grid.Row="2" Width="2"></Rectangle>
    
    <!-- Right Main View â€” The Magic Gallery -->
    <!-- Needs 3 columns - title, line, gallery -->
    <Rectangle Grid.Column="4" Grid.Row="3" Fill="#1F1F1F"></Rectangle>
    <!-- Top Divider
    <Rectangle Grid.Row="1" Grid.ColumnSpan="5"
               Fill="#0C0C0D" Height="2"/>
                -->
    <!-- End of Grid -->
    </Grid>

</Window>

