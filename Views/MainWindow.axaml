<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CreativeFileBrowser.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="620" d:DesignHeight="400"
        Width="620" Height="400"
        x:Class="CreativeFileBrowser.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="CreativeFileBrowser">

    <Grid Background="#070714" RowDefinitions="Auto, Auto, *">
        <!-- Title Bar -->
        <Grid Grid.Row="0" Height="40" ColumnDefinitions="Auto, *, Auto">
            <Rectangle Grid.Column="0" Width="5"></Rectangle>
            <!-- 0. Title -->
            <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label VerticalAlignment="Center" FontSize="18" FontWeight="Medium" Margin="5 0 0 0" Foreground="#F6F6F6">Creative File Browser</Label>
            </Grid>
            <Rectangle Grid.Column="2" Width="5"></Rectangle>
        </Grid>
        <!-- Controls -->
        <Grid Grid.Row="1" ColumnDefinitions="Auto, Auto, *" RowDefinitions="Auto, *">
            <!-- 1. Left Side Options -->
            <Rectangle Fill="#101022" Grid.Column="0" Grid.Row="0" Width="90" Height="40" ></Rectangle>
            <Label Grid.Column="0" Grid.Row="0" Foreground="#F6F6F6">Buttons</Label>
            <Rectangle Fill="#0A0A17" Grid.Column="0" Grid.Row="1" ></Rectangle>
            <Label Grid.Column="0" Grid.Row="1" Foreground="#F6F6F6">Features</Label>
            <!-- 2. File Tree View and Search -->
            <Rectangle Fill="#1F1F37" Grid.Column="1" Grid.Row="0" Width="90"></Rectangle>
            <Label Grid.Column="1" Grid.Row="0" Foreground="#F6F6F6">File Path</Label>
            <Rectangle Fill="#17172B" Grid.Column="1" Grid.Row="1" ></Rectangle>
            <Label Grid.Column="1" Grid.Row="1" Foreground="#F6F6F6">Search/Tree</Label>
            <!-- 3. Main Gallery View based on selection -->
            <Rectangle Fill="#7A7A94" Grid.Column="2" Grid.Row="0"></Rectangle>
            <Label Grid.Column="2" Grid.Row="0" Foreground="#F6F6F6">File Title — Zoom — Buttons — Search</Label>
            <Rectangle Fill="#25253E" Grid.Column="2" Grid.Row="1"></Rectangle>
            <Label Grid.Column="2" Grid.Row="1" Foreground="#F6F6F6">Gallery — Main View</Label>

        </Grid>
        <!-- Main Area -->

    </Grid>

</Window>
