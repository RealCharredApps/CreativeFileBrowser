<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CreativeFileBrowser.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="620" d:DesignHeight="400"
        Width="620" Height="400"
        x:Class="CreativeFileBrowser.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="CreativeFileBrowser">

        <Design.DataContext>
            <vm:MainViewModel/>
        </Design.DataContext>

        <Window.DataContext>
            <vm:MainViewModel/>
        </Window.DataContext>

    <Grid Background="#101022">
    <!-- Grid Setup -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" /> <!-- Left Side Options -->
            <ColumnDefinition Width="Auto" />   <!-- Left Column Divider -->
            <ColumnDefinition Width="Auto" />   <!-- Center File TreeView -->
            <ColumnDefinition Width="Auto" />   <!-- Center Column Divider -->
            <ColumnDefinition Width="*" />   <!-- Main Content Area -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />  <!-- Title Bar -->
            <RowDefinition Height="Auto" />     <!-- Top Divider -->
            <RowDefinition Height="Auto" />     <!-- Top Workspaces -->
            <RowDefinition Height="Auto" />     <!-- Main Divider -->
            <RowDefinition Height="*" />     <!-- Main Area -->
        </Grid.RowDefinitions>
    <!-- Grid Content - Top Down Over -->
    <!-- TitleBar -->
        <Rectangle Grid.ColumnSpan="5" Grid.Row="0" Fill="#131718"></Rectangle>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="5" Orientation="Horizontal"
                    HorizontalAlignment="Left" VerticalAlignment="Center" 
                    Margin="5">
            <TextBlock Text="{Binding Title}"
                FontWeight="Bold" FontSize="14" Foreground="#FFFFFF" 
                VerticalAlignment="Center" Margin="5, 0">
            </TextBlock>
            <TextBlock Text="{Binding Subtitle}"
                FontWeight="Light" FontSize="14" Foreground="#FFFFFF" 
                VerticalAlignment="Center" Margin="">
            </TextBlock>
        </StackPanel>
        <!-- Top Divider -->
        <Rectangle Grid.Row="1" Grid.ColumnSpan="5"
                Fill="#292D2E" Height="2"/>


    <!-- WorkspaceBar -->
        <!-- Dynamically update depending on icon button press -->
        <Rectangle Grid.ColumnSpan="5" Grid.Row="2" Fill="#131718"></Rectangle>
            <StackPanel Grid.Row="2" Grid.ColumnSpan="5" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">            
                <Border 
                        Background="Transparent" BorderThickness="0" 
                        Padding="5" Margin="0">
                    <TextBlock Text="{Binding CurrentWorkspaceTxt}" 
                            FontWeight="Bold" FontSize="10" Foreground="Gray"/>
                </Border>

                <Button Command="{Binding SaveWorkspaceCommand}" 
                        Background="Transparent" BorderThickness="0" 
                        Padding="5" Margin="0">
                    <TextBlock Text="{Binding SaveCurrentWorkspaceTxt}" 
                            FontSize="10" Foreground="Gray"/>
                </Button>
                
                <Button Command="{Binding UpdateWorkspaceCommand}" 
                        Background="Transparent" BorderThickness="0" 
                        Padding="5" Margin="0">
                    <TextBlock Text="{Binding UpdateCurrentWorkspaceTxt}" 
                            FontSize="10" Foreground="Gray"/>
                </Button>
                
                <Button Command="{Binding RemoveWorkspaceCommand}" 
                        Background="Transparent" BorderThickness="0" 
                        Padding="5" Margin="0">
                    <TextBlock Text="{Binding RemoveCurrentWorkspaceTxt}" 
                            FontSize="10" Foreground="Gray"/>
                </Button>
        </StackPanel>
        <!-- Main Divider -->
        <Rectangle Grid.Row="3" Grid.ColumnSpan="5"
                Fill="#292D2E" Height="2"/>

    <!-- Main Area -->
    <!-- LeftOptionsArea -->
        <Grid Grid.Column="0" Grid.Row="4" RowDefinitions="Auto, Auto, *, Auto">
            <Rectangle Fill="#131718" Grid.RowSpan="3"></Rectangle>

            <!-- Left Buttons -->
            <StackPanel Grid.Row="1" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Vertical">            
                <!-- Left Top - System Files + Current Workspace -->
                <!-- System Files Button -->
                <Button Command="{Binding ShowSystemFilesCommand}" 
                        Height="30" Background="#ADADAD" CornerRadius="6" 
                        Padding="5" Margin="5, 2.5" 
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label FontSize="10" Foreground="#131718">A</Label>
                </Button>
                <TextBlock Text="{Binding SystemFilesIconTxt}" 
                        FontSize="8" Foreground="Gray" 
                        HorizontalAlignment="Center"></TextBlock>
                
                <!-- Monitored Files Button -->
                <Button Command="{Binding ShowMonitoredFilesCommand}" 
                        Height="30" Background="#ADADAD" CornerRadius="6" 
                        Padding="5" Margin="5, 2.5" 
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label FontSize="10" Foreground="#131718">B</Label>
                </Button>
                <TextBlock Text="{Binding MonitoredFilesIconTxt}" 
                        FontSize="8" Foreground="Gray" 
                        HorizontalAlignment="Center"></TextBlock>
                
                <!-- Workspaces Button -->
                <Button Command="{Binding ShowWorkspacesCommand}" 
                        Height="30" Background="#ADADAD" CornerRadius="6" 
                        Padding="5" Margin="5, 2.5" 
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label FontSize="10" Foreground="#131718">C</Label>
                </Button>
                <TextBlock Text="{Binding WorkspacesTxt}" 
                        FontSize="8" Foreground="Gray" 
                        HorizontalAlignment="Center"></TextBlock>
            </StackPanel>

            <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5">
                <!-- Settings Button -->
                <Button Command="{Binding ShowSettingsCommand}" 
                        Height="30" Background="#ADADAD" CornerRadius="50" 
                        Padding="5" Margin="5, 2.5" 
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label FontSize="10" Foreground="#131718">H</Label>
                </Button>
                <TextBlock Text="{Binding UserSettingsTxt}" 
                        FontSize="8" Foreground="Gray"></TextBlock>
            </StackPanel>
        </Grid>
        <!-- Left Column Divider -->
        <Rectangle Fill="#292D2E" Grid.Column="1" Grid.Row="4" Width="2"></Rectangle>

    <!--  CenterOptions -->
        <!-- Center - File Treeview options -->
        <Grid Grid.Column="2" Grid.Row="4" RowDefinitions="Auto, Auto, Auto, Auto, *" >
            <Rectangle Fill="#171819" Grid.RowSpan="5"></Rectangle>

            <TextBox Grid.Row="2" FontSize="10" Background="DarkGray" Padding="5" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center" Width="215" CornerRadius="6">
                File Search
            </TextBox>

            <!-- Divider -->
            <Rectangle Grid.Row="3" Fill="#292D2E" Height="2"/>

            <!-- Example file treeview placeholder -->
            <StackPanel Grid.Row="4">
                <TextBlock FontSize="10" Foreground="White" Padding="5, 5, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">File Treeview  v</TextBlock>
                <TextBlock FontSize="10" Foreground="White" Padding="5, 0, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">___ File Treeview</TextBlock>
                <TextBlock FontSize="10" Foreground="White" Padding="5, 0, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">___ File Treeview</TextBlock>
                <TextBlock FontSize="10" Foreground="White" Padding="5, 0, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">___ ___ File Treeview</TextBlock>
                <TextBlock FontSize="10" Foreground="White" Padding="5, 0, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">___ ___ File Treeview</TextBlock>

                <TextBlock FontSize="10" Foreground="White" Padding="5, 5, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">File Treeview  v</TextBlock>
                <TextBlock FontSize="10" Foreground="White" Padding="5, 0, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">___ File Treeview</TextBlock>
                <TextBlock FontSize="10" Foreground="White" Padding="5, 0, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">___ File Treeview</TextBlock>
                <TextBlock FontSize="10" Foreground="White" Padding="5, 0, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">___ ___ File Treeview</TextBlock>
                <TextBlock FontSize="10" Foreground="White" Padding="5, 0, 5, 0" Margin="5, 5, 5, 0" HorizontalAlignment="Left" VerticalAlignment="Top">___ ___ File Treeview</TextBlock>
            </StackPanel>
            <!-- Divider
            <Rectangle Grid.Row="5" Fill="#292D2E" Height="2"/>
            -->
        </Grid>
        <!-- Center Column Divider -->
        <Rectangle Fill="#292D2E" Grid.Column="3" Grid.Row="4" Width="2"></Rectangle>

    <!--  RightMainView -->
        <!-- The Magic Gallery -->
        <!-- Needs 3 Rows - title, line, gallery -->
        <Rectangle Grid.Column="4" Grid.Row="4" Fill="#1F1F1F"></Rectangle>
        <TextBlock Grid.Column="4" Grid.Row="4" Foreground="Snow" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5">Gallery View</TextBlock>
        <!-- Top Divider
        <Rectangle Grid.Row="1" Grid.ColumnSpan="5"
                Fill="#0C0C0D" Height="2"/>
                    -->
    
    <!-- End Grid -->
    </Grid>
</Window>

