<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CreativeFileBrowser.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="using:FileExplorer"
        xmlns:converters="using:CreativeFileBrowser.Converters"
        mc:Ignorable="d" d:DesignWidth="570" d:DesignHeight="450"
        Width="570" Height="450"
        x:Class="CreativeFileBrowser.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="FileHoundCreativeFileBrowser">

        <Design.DataContext>
            <vm:MainViewModel/>
        </Design.DataContext>
        <Window.DataContext>
            <vm:MainViewModel/>
        </Window.DataContext>
    <!-- Styles Setup -->
        <Window.Styles>
            <Style Selector="Window">
                <Setter Property="Background" Value="#131718"/>
            </Style>
            <Style Selector="TextBlock.h1">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Foreground" Value="#F7F7F7"/>
            </Style>
            <Style Selector="TextBlock.h2">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
            <Style Selector="TextBlock.h3">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="8"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
            <Style Selector="TextBlock.bp1">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
            <Style Selector="TextBlock.bp2">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
            <Style Selector="TextBlock.bp3">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="8"/>
                <Setter Property="Foreground" Value="#A8A9A9"/>
            </Style>
            <Style Selector="TextBox.clickToCopyPath">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="Cursor" Value="Hand"/>
                
                <Style Selector="^:focus">
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
                
                <Style Selector="^:pointerover">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                </Style>

                <Style Selector="^:pressed">
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
            </Style>
            <Style Selector="TextBox.pathDisplay">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="8"/>
                <Setter Property="Foreground" Value="#A8A9A9"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="4,2"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="CaretBrush" Value="Transparent"/>
                
                <!-- Override all possible states to ensure transparency -->
                <Style Selector="^:pointerover">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                </Style>
                
                <Style Selector="^:focus">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
                
                <Style Selector="^:pressed">
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
            </Style>
            <Style Selector="TextBox.tbp1">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
            <Style Selector="TextBox.tbp2">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
            <Style Selector="TextBox.tbp3">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="8"/>
                <Setter Property="Foreground" Value="#A8A9A9"/>
            </Style>
            <Style Selector="ContentControl.ccp1">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
            <Style Selector="ContentControl.ccp2">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
            <Style Selector="ContentControl.ccp3">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="8"/>
                <Setter Property="Foreground" Value="#A8A9A9"/>
            </Style>
            <Style Selector="Label.p1">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
            <Style Selector="Label.p2">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="8"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
            <Style Selector="Button.b0">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="4, 0"/>
                <Setter Property="Margin" Value="0, 0, 0, 4"/>

                <Style Selector="^:pointerover">
                    <Setter Property="Background" Value="Gray"/>
                </Style>
            </Style>
            <Style Selector="Button.b1">
                <Setter Property="Background" Value="White"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="2"/>
                <Setter Property="Margin" Value="2"/>

                <Style Selector="^:pointerover">
                    <Setter Property="Background" Value="LightGray"/>
                </Style>
            </Style>
            <Style Selector="Button.b2">
                <Setter Property="Background" Value="#EA9542"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="2"/>
                <Setter Property="Margin" Value="2"/>

                <Style Selector="^:pointerover">
                    <Setter Property="Background" Value="#EFC47B"/>
                </Style>
            </Style>
            <Style Selector="Button.b3">
                <Setter Property="Background" Value="#EFC47B"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="2"/>
                <Setter Property="Margin" Value="2"/>

                <Style Selector="^:pointerover">
                    <Setter Property="Background" Value="#F2DDB3"/>
                </Style>
            </Style>
            <Style Selector="Button.b4">
                <Setter Property="Background" Value="#F2DDB3"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="2"/>
                <Setter Property="Margin" Value="2"/>

                <Style Selector="^:pointerover">
                    <Setter Property="Background" Value="#F2E2D0"/>
                </Style>
            </Style>
            <Style Selector="Button.b5">
                <Setter Property="Background" Value="#F2E2D0"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="2"/>
                <Setter Property="Margin" Value="2"/>

                <Style Selector="^:pointerover">
                    <Setter Property="Background" Value="#FFEEE6"/>
                </Style>
            </Style>
            <Style Selector="Label.bt1">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Foreground" Value="#131718"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style Selector="Label.bt2">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="#131718"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style Selector="Label.bt3">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="Foreground" Value="#131718"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style Selector="TextBlock.l1">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="#F7F7F7"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
            </Style>
            <Style Selector="TextBlock.l2">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="Foreground" Value="#A8A9A9"/>
                <Setter Property="Margin" Value="0, 0, 0, 8"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
            </Style>
            <Style Selector="TextBlock.l3">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="8"/>
                <Setter Property="Foreground" Value="#A8A9A9"/>
                <Setter Property="Margin" Value="0, 0, 0, 8"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
            </Style>
            <Style Selector="Label.lb1">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="#F7F7F7"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style Selector="Label.lb2">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="Foreground" Value="#A8A9A9"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style Selector="Label.lb3">
                <Setter Property="FontFamily" Value="Roboto"/>
                <Setter Property="FontSize" Value="8"/>
                <Setter Property="Foreground" Value="#A8A9A9"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </Window.Styles>

    <Window.Resources>
        <converters:FolderIconConverter x:Key="FolderIconConverter"/>
        <converters:DriveIconConverter x:Key="DriveIconConverter"/>
    </Window.Resources>
   
    <Grid>
    <!-- Grid Setup -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" /> <!-- Left Side Options -->
            <ColumnDefinition Width="Auto" />   <!-- Left Column Divider -->
            <ColumnDefinition Width="*" />   <!-- Main Content Area -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />  <!-- Workspace Bar -->
            <RowDefinition Height="Auto" />     <!-- Divider -->
            <RowDefinition Height="*" />     <!-- Main Area -->
        </Grid.RowDefinitions>
    <!-- Top - WorkspaceBar View 1-->
        <!-- Dynamically update depending on left press -->
        <Rectangle Fill="#1F1F1F" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2"></Rectangle>
        <Grid Grid.Column="2" Grid.Row="0" ColumnDefinitions="Auto, *, Auto"
                Margin="12, 4">      
                <TextBlock Classes="h1" Text="Binding CurrentViewName" Grid.Column="0"
                            HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="2" Classes="b2"
                            VerticalAlignment="Center" Orientation="Horizontal" 
                            HorizontalAlignment="Right" Margin="8, 0, 8, 4">
                        <ToggleSwitch Command="" Classes="l1" Margin="0"
                                VerticalAlignment="Center" FontSize="8"
                                Foreground="#F7F7F7" >
                        </ToggleSwitch>
                        <TextBlock Classes="l1" Text=": Recursive Search"
                                    FontSize="8" 
                                    VerticalAlignment="Center"/>
                    </StackPanel>
        </Grid>
        <!-- Workspace Divider -->
        <Rectangle Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"
                Fill="#292D2E" Height="1"/>

    <!-- LeftOptionsArea -->
        <Grid Grid.Column="0" Grid.Row="4" RowDefinitions="Auto, Auto, *, Auto">
            <Rectangle Fill="#131718" Grid.RowSpan="3"></Rectangle>

            <!-- Left Buttons -->
            <StackPanel Grid.Row="1" Margin="12, 4" 
                        HorizontalAlignment="Center" VerticalAlignment="Top" 
                        Orientation="Vertical">                            
                <Button Command="" Classes="b0">
                    <Label Classes="lb1" >System Files</Label>
                </Button>
                <Button Command="" Classes="b0">
                    <Label Classes="lb1" >Monitor List</Label>
                </Button>
                <!-- Spacer -->
                <Rectangle Fill="#292D2E" Height="1" Margin="0, 0, 0, 8"></Rectangle>
                <StackPanel Orientation="Vertical" 
                            HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 4">
                    <Button Command="" Classes="b2" Margin="0, 0, 0, 4"
                            Width="22" Height="22"
                            HorizontalAlignment="Center">
                        <Label Classes="bt3">+</Label>
                    </Button>
                    <TextBlock Classes="l2" Text="Monitor Folder"
                                HorizontalAlignment="Center" VerticalAlignment="Center" 
                                Margin="0"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0, 0, 0, 4" 
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Command="" Classes="b3" Margin="0, 0, 0, 4"
                            Width="22" Height="22"
                            HorizontalAlignment="Center">
                        <Label Classes="bt3">+</Label>
                    </Button>
                    <TextBlock Classes="l2" Text="Add New Folder"
                                HorizontalAlignment="Center" VerticalAlignment="Center" 
                                Margin="0"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0, 0, 0, 4" 
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Command="" Classes="b4" Margin="0, 0, 0, 4"
                            Width="22" Height="22"
                            HorizontalAlignment="Center">
                        <Label Classes="bt3">+</Label>
                    </Button>
                    <TextBlock Classes="l2" Text="New Workspace"
                                HorizontalAlignment="Center" VerticalAlignment="Center" 
                                Margin="0"/>
                </StackPanel>
                <!-- Spacer -->
                <Rectangle Fill="#292D2E" Height="1" Margin="0, 0, 0, 8"></Rectangle>
                <Button Command="" Classes="b0">
                    <Label Classes="lb2" >Workspaces</Label>
                </Button>
                <Button Command="" Classes="b0">
                    <Label Classes="lb1" >Project 007</Label>
                </Button>
                <Button Command="" Classes="b0">
                    <Label Classes="lb1" >Social</Label>
                </Button>
                <Button Command="" Classes="b0">
                    <Label Classes="lb1">Business A</Label>
                </Button>
            </StackPanel>
            <!-- Settings Button -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom" Margin="4">
                <Button Command="{Binding ShowSettingsCommand}" 
                        Classes="b5" HorizontalAlignment="Center">
                    <Label Classes="bt3" Foreground="#131718">O</Label>
                </Button>
                <TextBlock Text="Settings" 
                        Classes="l2" Margin="4"></TextBlock>
            </StackPanel>
        </Grid>
        <!-- Column Divider -->
        <Rectangle Fill="#292D2E" Grid.Column="1" Grid.RowSpan="3" Width=".5"></Rectangle>

    
    <!-- The Magic Gallery -->
        <Rectangle Grid.Column="4" Grid.Row="4" Fill="#1F1F1F"></Rectangle>
        <Grid Grid.Column="4" Grid.Row="4" 
                Grid.ColumnDefinitions="Auto, Auto, *">
            <!-- Gallery View - Center Column -->
                <StackPanel Grid.Column="0" >
                    <!-- File Path -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left"
                                Margin="8, 4, 8, 0" MaxWidth="200">
                        <StackPanel Orientation="Horizontal" Height="16">
                            <TextBlock Classes="bp2" Text="Current Path:" 
                                        FontWeight="Bold"
                                        HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <!-- Success notification that appears on copy -->
                            <Border x:Name="CopyNotification" 
                                    Background="#162A23" 
                                    BorderBrush="#4DCEA3" 
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Padding="4, 2"
                                    Margin="4, 0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    IsVisible="False">
                                <TextBlock Text="✓ Path copied" 
                                        Foreground="#4DCEA3" 
                                        FontSize="9"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <TextBox x:Name="PathTextBox" 
                                Classes="tbp2"
                                Text="{Binding FileExplorer.CurrentPath}"
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top" 
                                Padding="0"
                                Margin="4, 0"
                                Background="Transparent"
                                BorderThickness="0"
                                IsReadOnly="True"
                                Cursor="Hand"
                                ToolTip.Tip="Click to copy path"
                                Tapped="OnPathTextBoxTapped">
                                <!-- Override internal style to eliminate all backgrounds -->
                                <TextBox.Styles>
                                    <Style Selector="TextBox">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                    <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                    <Style Selector="TextBox:pointerover">
                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                    </Style>
                                </TextBox.Styles>
                            </TextBox>
                        </StackPanel>
                    </StackPanel>
                    <!-- Spacer -->
                    <Rectangle Fill="#292D2E" Height="1" Margin="0, 0, 0, 4"></Rectangle>
                    <!-- Navigation Controls -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Left" VerticalAlignment="Center" 
                                Margin="8, 4, 8, 4">
                        <Button Command="{Binding FileExplorer.NavigateBackCommand}" 
                                Classes="b3" Width="24" Height="24" 
                                Margin="0, 0, 2, 0"
                                ToolTip.Tip="Back">
                            <Label Classes="bt2" FontSize="10">←</Label>
                        </Button>
                        <Button Command="{Binding FileExplorer.NavigateForwardCommand}" 
                                Classes="b3" Width="24" Height="24" 
                                Margin="0, 0, 2, 0"
                                ToolTip.Tip="Forward">
                            <Label Classes="bt2" FontSize="10">→</Label>
                        </Button>
                        <Button Command="{Binding FileExplorer.NavigateUpCommand}" 
                                Classes="b3" Width="24" Height="24" 
                                Margin="0, 0, 2, 0"
                                ToolTip.Tip="Up to parent folder">
                            <Label Classes="bt2" FontSize="10">↑</Label>
                        </Button>
                        <Button Command="{Binding FileExplorer.CopySelectedPathCommand}" 
                                Classes="b3" Width="24" Height="24" 
                                Margin="0, 0, 2, 0"
                                ToolTip.Tip="Copy Path">
                            <Label Classes="bt2" FontSize="9">📋</Label>
                        </Button>
                    </StackPanel>
                    
                    <!-- File tree view -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto"
                        Width="200" MaxHeight="350" HorizontalAlignment="Left"
                        Grid.Column="0" >
                        <TreeView Grid.Column="0" 
                                ItemsSource="{Binding FileExplorer.RootItems}"
                                SelectedItem="{Binding FileExplorer.SelectedItem}">
                            <TreeView.ItemTemplate>
                                <TreeDataTemplate ItemsSource="{Binding Children}">
                                    <StackPanel Orientation="Horizontal" Margin="-30, 0"
                                                Spacing="5"
                                                DoubleTapped="OnItemDoubleTapped">
                                        <Image Width="8" Height="8" HorizontalAlignment="Left"
                                                VerticalAlignment="Center">
                                            <Image.Source>
                                                <DrawingImage>
                                                    <DrawingImage.Drawing>
                                                        <GeometryDrawing>
                                                            <GeometryDrawing.Brush>
                                                                <MultiBinding Converter="{StaticResource DriveIconConverter}">
                                                                    <Binding Path="DriveType" />
                                                                    <Binding Path="IsDirectory" />
                                                                </MultiBinding>
                                                            </GeometryDrawing.Brush>
                                                            <GeometryDrawing.Geometry>
                                                                <RectangleGeometry Rect="0,0,12,12" />
                                                            </GeometryDrawing.Geometry>
                                                        </GeometryDrawing>
                                                    </DrawingImage.Drawing>
                                                </DrawingImage>
                                            </Image.Source>
                                        </Image>
                                        <TextBlock Text="{Binding Name}" Classes="bp2"
                                                HorizontalAlignment="Left" VerticalAlignment="Center" 
                                                Cursor="Hand">
                                        </TextBlock>
                                    </StackPanel>
                                </TreeDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </ScrollViewer>
                </StackPanel>
            <!-- Column Divider -->
                <Rectangle Fill="#292D2E" Grid.Column="1" Grid.Row="4" Width="1"></Rectangle>
            <!-- Gallery Right -->
                <StackPanel Grid.Column="2" >
                    <!-- Textbox search bar - ftr:refresh btn - filters btn -->
                    <TextBlock Classes="bp2" Text="Search - Filters"
                            HorizontalAlignment="Right" VerticalAlignment="Center" 
                            Margin="8" Foreground="Gray"></TextBlock>
                    
                    <!-- Spacer -->
                    <Rectangle Fill="Transparent" Height="1" Margin="0"></Rectangle>
                    <!-- Content/preview pane -->
                        <Grid Grid.Column="1" RowDefinitions="Auto,*">                            
                            <!-- File preview area -->
                            <Border Grid.Row="1" 
                                    BorderBrush="Transparent" 
                                    BorderThickness="0" 
                                    Margin="4">
                                <ContentControl Content="{Binding FileExplorer.FilePreviewViewModel}"
                                                Classes="ccp1"
                                                Margin="4"/>
                            </Border>
                        </Grid>
                </StackPanel>
        </Grid>
    
    <!-- End Grid -->
    </Grid>
</Window>

